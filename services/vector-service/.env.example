# =============================================================================
# Vector Service Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# Qdrant Configuration
# -----------------------------------------------------------------------------
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Default collection configuration
DEFAULT_VECTOR_SIZE=384
DEFAULT_DISTANCE=Cosine

# -----------------------------------------------------------------------------
# Embedding Configuration
# -----------------------------------------------------------------------------
# Model for local embedding generation
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Use local sentence-transformers model (true) or remote llm-service (false)
USE_LOCAL_EMBEDDINGS=true

# LLM Service URL for remote embeddings
LLM_SERVICE_URL=http://localhost:8001

# -----------------------------------------------------------------------------
# Caching Configuration (Optional)
# -----------------------------------------------------------------------------
ENABLE_CACHING=false
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------
# Maximum batch size for vector operations
MAX_BATCH_SIZE=1000

# Connection pool settings
QDRANT_TIMEOUT=30.0
QDRANT_GRPC_PORT=6334

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true
