{
  "name": "@flowforge/app",
  "version": "1.0.0",
  "description": "FlowForge - Unified Platform with ForgeHook Plugin System",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc -p tsconfig.client.json && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/server/index.js",
    "preview": "vite preview",
    "migrate": "ts-node scripts/run-migration.ts",
    "test": "vitest",
    "test:server": "jest --config jest.server.config.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t flowforge .",
    "docker:run": "docker run -p 4000:4000 flowforge"
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.19",
    "@testing-library/dom": "^10.4.1",
    "ajv": "^8.12.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "dockerode": "^4.0.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.1",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.562.0",
    "pg": "^8.11.0",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "react-syntax-highlighter": "^16.1.0",
    "tailwind-merge": "^3.4.0",
    "tar-stream": "^3.1.0",
    "typescript-eslint": "^8.53.1",
    "uuid": "^13.0.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/dockerode": "^4.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.10.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/tar-stream": "^3.1.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^29.7.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.1.0",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
