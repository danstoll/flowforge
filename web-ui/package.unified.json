{
  "name": "@flowforge/app",
  "version": "1.0.0",
  "description": "FlowForge - Self-hosted microservices platform with plugin management",
  "type": "module",
  "scripts": {
    "dev:frontend": "cd frontend && vite",
    "dev:backend": "ts-node-dev --respawn --transpile-only backend/src/index.ts",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && vite build",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node backend/dist/index.js",
    "migrate": "ts-node backend/scripts/run-migration.ts",
    "test:frontend": "cd frontend && vitest",
    "test:backend": "jest",
    "test": "npm run test:backend && npm run test:frontend",
    "lint": "eslint . --ext ts,tsx",
    "typecheck": "tsc --noEmit && cd frontend && tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "@tanstack/react-query": "^5.17.0",
    "axios": "^1.6.4",
    "lucide-react": "^0.303.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "class-variance-authority": "^0.7.0",
    "react-syntax-highlighter": "^15.5.0",
    "zustand": "^4.4.7",
    "date-fns": "^3.2.0",
    "fastify": "^4.25.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/websocket": "^8.3.0",
    "@fastify/static": "^6.12.0",
    "dockerode": "^4.0.2",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "dotenv": "^16.3.0",
    "uuid": "^9.0.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.0",
    "ajv": "^8.12.0",
    "tar-stream": "^3.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/node": "^20.10.0",
    "@types/dockerode": "^3.3.23",
    "@types/uuid": "^9.0.0",
    "@types/pg": "^8.10.0",
    "@types/tar-stream": "^3.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@playwright/test": "^1.41.0",
    "jsdom": "^23.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0",
    "prettier": "^3.1.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
